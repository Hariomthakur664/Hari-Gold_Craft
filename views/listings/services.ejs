                    <input type="checkbox" id="agreeCheckbox" onclick="toggleAgreeButton()">
                    <label for="agreeCheckbox">I have read and agree to the terms and services</label>
                </div>
            </div>
            <div class="popup-footer">
                <button id="agreeBtn" onclick="closePopup('termsPopup')" disabled>I Agree</button>

            </div>
        </div>
    </div>
    <script src="/js/script.js"></script>
