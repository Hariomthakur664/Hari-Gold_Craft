<% layout("/layouts/boilerplate") %>

<div class="container mt-2 mb-2">
    <!-- Cards container -->
    <div id="listContainer">
         <!-- Back to Shop Button aligned to the left -->

         <!-- All Jewellers centered -->
         <h2 class="text" >
             <b>All Jewellers</b>
         <a href="/hr/listing/<%= listings._id %>" class="btn btn-primary " style="margin-left: 70%;">Back to Shop</a>
         </h2>
        
        <!-- Cards Section -->
        <div class="row">
            <% for (list of listings.lists) { %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0" style="min-width: 300px !important;">
                        <img src="<%= list.images.url %>" class="card-img-top" alt="Image" style="width: 100%; height: auto; object-fit: cover; border-radius: 0;">
                        <div class="card-body">
                            <h5 class="card-title text-primary mb-2 text-center"><%= list.name %></h5>
                            <p class="card-text mb-1"><strong>Description:</strong> <%= list.description %></p>
                            <p class="card-text mb-1"><strong>Category:</strong> <%= list.category %></p>
                            <p class="card-text mb-1"><strong>Weight:</strong> <%= list.weightInGrams %> grams</p>
                            <p class="card-text mb-1"><strong>Current rate:</strong> $<%= list.basePricePerGram %></p>
                            <p class="card-text mb-1"><strong>Price:</strong> $<%= list.calculatedPrice %></p>
                            <p class="card-text mb-1"><strong>Jeweller:</strong> <%= list.jewellerName %></p>
                            <div class="d-flex align-items-center mb-2">
                                <strong class="me-2">For Order:</strong>
                                <a href="tel:<%= listings.number %>" class="d-flex align-items-center" style="text-decoration: none;">
                                    <i class="fa-solid fa-phone me-2"></i><%= listings.number %>
                                </a>
                            </div>

                            <%if(currUser &&  currUser._id.equals(listings.owner)){%>
                                <form method="POST" action="/hr/listing/<%= listings._id %>/List/<%= list._id %>?_method=DELETE" class="mt-2">
                                    <button type="submit" class="btn btn-danger btn-sm w-100">Delete</button>
                                </form>
                                <a href="/hr/listing/<%= listings._id %>/List/<%= list._id %>/edit" class="btn btn-primary btn-sm w-100 mt-2 mb-0">Edit</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
